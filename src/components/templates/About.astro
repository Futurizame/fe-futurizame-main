---
import AppLayout from "../../layouts/AppLayout.astro";
import { getTranslator } from "../../i18n";
import ContentWrapper from "../ui/ContentWrapper.astro";
import SectionWrapper from "../common/SectionWrapper.astro";
import ParagraphsWrapper from "../common/ParagraphsWrapper.astro";
import MainTitle from "../ui/MainTitle.astro";

interface Props {
  locale: string;
}

const page = "about";
const { locale } = Astro.props;
const t = getTranslator(locale);
---

<AppLayout locale={locale} currentPage={page}>
  <ContentWrapper>
    <main class="hero">
      <MainTitle id="about" text={t("about", "title")} />
    </main>

    <SectionWrapper>
      <ParagraphsWrapper>
        <p>{t("about", "p1")}</p>
        <p>{t("about", "p2")}</p>
        <p>{t("about", "p3")}</p>
        <p>{t("about", "p4")}</p>
        <p>{t("about", "p5")}</p>
        <p>{t("about", "p6")}</p>
        <p>{t("about", "p7")}</p>
        <p><strong>{t("about", "contact")}</strong></p>
      </ParagraphsWrapper>
    </SectionWrapper>
  </ContentWrapper>
</AppLayout>

<style>
  .hero {
    padding: 60px 0 0 0;
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }
</style>
