---
import AppLayout from "../../layouts/AppLayout.astro";
import Link from "../ui/Link.astro";
import ContentWrapper from "../ui/ContentWrapper.astro";
import MainTitleWrapper from "../common/MainTitleWrapper.astro";
import { getTranslator } from "../../i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  locale: string;
}

const page = "courses";
const { locale } = Astro.props;

const t = getTranslator(locale);
---

<AppLayout locale={locale} currentPage={page}>
  <ContentWrapper>
    <MainTitleWrapper id="courses" text={t("courses", "title")} />

    <Link href={getRelativeLocaleUrl(locale, t("routes", "courses.javascript"))}>
      {t("courses", "courses.javascript")}
    </Link>
  </ContentWrapper>
</AppLayout>
