---
import { getTranslator } from "../../i18n";
interface Props {
  locale: string;
  version: string;
  showBanner: boolean;
}

const { locale, version, showBanner } = Astro.props;

const banner = `,_     .
|_ . . |- . . ,-. . ,_, ,-.   ,-,-. ,-.
|  | | |  | | |   |  /  ,-|   | | | |-' 
|  \`-' \`' \`-' '   ' "'" \`-^   ' ' ' \`-' 
'                           ~~`;

const t = getTranslator(locale);
---

<footer>
  {
    showBanner && (
      <div class="footer-ascii">
        <pre>{banner}</pre>
      </div>
    )
  }

  <div class="bottom-bar">
    <p>© {t("footer", "label")} ♡.</p>
    <p>v{version}</p>
  </div>
</footer>

<style>
  .footer-ascii {
    display: flex;
    justify-content: center;
    padding: 32px 16px 8px 16px;
  }

  .bottom-bar {
    border-top: calc(1px / 2) solid;
    padding: 4px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }
</style>
