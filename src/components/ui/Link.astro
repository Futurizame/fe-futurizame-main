---
interface Props {
  href: string;
  target?: string;
  rel?: string;
}

const { href, target, rel } = Astro.props;
---

<a href={href} target={target} rel={rel}>
  <div class="button">
    <slot />
  </div>
</a>

<style>
  .button {
    color: var(--color-primary);
    border: 1px dashed;
    border-radius: 8px;
    padding: 16px;
  }

  .button:hover {
    background: var(--color-primary);
    border: 1px solid var(--color-primary);
    color: var(--color-on-primary);
  }
</style>
