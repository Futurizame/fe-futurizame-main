---
import Home from "../../components/templates/Home.astro";
import Eye from "../../components/templates/Eye.astro";
import type { GetStaticPaths } from "astro";
import Learn from "../../components/templates/Learn.astro";
import LearnJavascript from "../../components/templates/LearnJavascript.astro";

export const getStaticPaths: GetStaticPaths = () => {
  return [
    { params: { locale: "en", slug: "/" }, props: { page: "home" } },
    { params: { locale: "en", slug: "/the-eye" }, props: { page: "eye" } },
    { params: { locale: "en", slug: "/learn/" }, props: { page: "learn" } },
    { params: { locale: "en", slug: "/learn/javascript" }, props: { page: "javascript" } },

    { params: { locale: "es", slug: "/" }, props: { page: "home" } },
    { params: { locale: "es", slug: "/el-ojo" }, props: { page: "eye" } },
    { params: { locale: "es", slug: "/aprender/" }, props: { page: "learn" } },
    { params: { locale: "es", slug: "/aprender/javascript" }, props: { page: "javascript" } },
  ];
};

const locale = Astro.currentLocale;
---

{Astro.props.page === "home" && <Home locale={locale} />}
{Astro.props.page === "eye" && <Eye locale={locale} />}
{Astro.props.page === "learn" && <Learn locale={locale} />}
{Astro.props.page === "javascript" && <LearnJavascript locale={locale} />}
