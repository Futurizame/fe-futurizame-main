---
import type { GetStaticPaths } from "astro";
import Learn from "../../../components/templates/Learn.astro";
import LearnJavascript from "../../../components/templates/LearnJavascript.astro";

export const getStaticPaths: GetStaticPaths = () => {
  return [
    { params: { locale: "en", learn: "/learn", slug: "/" }, props: { page: "learn" } },
    { params: { locale: "en", learn: "/learn", slug: "/javascript" }, props: { page: "javascript" } },

    { params: { locale: "es", learn: "/aprender", slug: "/" }, props: { page: "learn" } },
    { params: { locale: "es", learn: "/aprender", slug: "/javascript" }, props: { page: "javascript" } },
  ];
};

const locale = Astro.currentLocale;
---

{Astro.props.page === "learn" && <Learn locale={locale} />}
{Astro.props.page === "javascript" && <LearnJavascript locale={locale} />}
